{
    "name": "clwrap",
    "subPackages": [
        {
            "name": "level1",
            "dependencies": {
                "derelict-cl": ">=1.2.1"
            },
            "sourcePaths": ["level1"],
            "importPaths": ["level1"],
            "targetType": "library",
        },
        {
            "name": "level2",
            "dependencies": {
                "clwrap:level1": { "path": "./" },
                "derelict-gl3": ">=1.0.11"
            },
            "sourcePaths": ["level2"],
            "importPaths": ["level2"],
            "targetType": "library"
        },
        {
            "name": "level3",
            "dependencies": {
                "clwrap:level1": { "path": "./" },
                "clwrap:level2": { "path": "./" }
            },
            "sourcePaths": ["level3"],
            "importPaths": ["level3"],
            "targetType": "library"
        },
        {
            "name": "bindgen",
            "dependencies": {
                "libdparse": ">=0.1.1",
                "derelict-cl": ">=1.2.1"
            },
            "sourcePaths": ["bindGen"],
            "targetType": "executable",
            "targetName": "genFunctions",
            "preGenerateCommands": [
                "printf 'auto input = \"$DERELICT_CL_PACKAGE_DIR/source/derelict/opencl/functions.d\";\nauto output = \"level1/clWrap/l1/functions.d\";' > bindGen/input_output.d"
            ],
            "postBuildCommands": [
                "rm bindGen/input_output.d"
            ]
        },
    ]
}
